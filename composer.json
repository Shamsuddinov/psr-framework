{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4.0",
    "aura/router": "^3.3",
    "zendframework/zend-diactoros": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/Framework/",
      "App\\": "src/App/",
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3"
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit --colors=always"
  }
}
